{
  "name": "hackernewsui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3"
  },
  "scripts": {
    "start": "run-p watch:css start-react",
    "build": "run-s build:css build-react",
    "test": "react-scripts test",
    "build:css": "node-sass src/assets/sass/style.scss src/assets/sass/style.css",
    "watch:css": "run-s build:css && node-sass src/assets/sass/style.scss src/assets/sass/style.css --watch --recursive",
    "start-react": "react-scripts start",
    "build-react": "react-scripts build",
    "eject": "react-scripts eject",
    "prettify": "prettier --write \"src/**/*.{js,jsx,json,scss}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "pretty-quick": "^3.0.0"
  }
}
